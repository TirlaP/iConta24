# Production environment variables for Strapi
NODE_ENV=production
HOST=0.0.0.0
PORT=1337

# Database (PostgreSQL for production)
DATABASE_CLIENT=postgres
DATABASE_URL=your-postgres-connection-string-here

# Security keys (generate new ones for production)
APP_KEYS=your-app-keys-here
JWT_SECRET=your-jwt-secret-here
API_TOKEN_SALT=your-api-token-salt-here
ADMIN_JWT_SECRET=your-admin-jwt-secret-here
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here

# CORS
STRAPI_ADMIN_CLIENT_URL=https://your-app.vercel.app
STRAPI_ADMIN_CLIENT_PREVIEW_SECRET=your-preview-secret-here